// apps/server/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "public/dist",
    "rootDir": "src",
    "esModuleInterop": true, // âœ… For `import express from 'express'`
    "allowSyntheticDefaultImports": true
  },
  "moduleSuffixes": [".js", ".ts"],
  "exclude": ["src/db"]
}
